public class Menu {
    public static void main(String[] args) {
        InventoryManagementSystem inventorySystem = new InventoryManagementSystem();
        Scanner scanner = new Scanner(System.in);

        // Adding at least 10 vehicles to the inventory
        inventorySystem.addVehicle(new Vehicle("truck", "red"));
        inventorySystem.addVehicle(new Vehicle("truck", "blue"));
        inventorySystem.addVehicle(new Vehicle("truck", "black"));
        inventorySystem.addVehicle(new Vehicle("car", "red"));
        inventorySystem.addVehicle(new Vehicle("car", "blue"));
        inventorySystem.addVehicle(new Vehicle("car", "black"));
        inventorySystem.addVehicle(new Vehicle("van", "red"));
        inventorySystem.addVehicle(new Vehicle("van", "blue"));
        inventorySystem.addVehicle(new Vehicle("van", "black"));
        inventorySystem.addVehicle(new Vehicle("truck", "white"));
        inventorySystem.addVehicle(new Vehicle("car", "white"));
        inventorySystem.addVehicle(new Vehicle("van", "white"));

        int choice;
        do {
            System.out.println("\nMenu:");
            System.out.println("1. View Inventory");
            System.out.println("2. Rent Vehicle");
            System.out.println("3. Return Vehicle");
            System.out.println("4. Exit");
            System.out.print("Enter your choice: ");
            choice = scanner.nextInt();
            scanner.nextLine(); // Consume newline

            switch (choice) {
                case 1:
                    inventorySystem.viewInventory();
                    break;
                case 2:
                    System.out.print("Enter vehicle type: ");
                    String type = scanner.nextLine();
                    System.out.print("Enter vehicle color: ");
                    String color = scanner.nextLine();
                    System.out.println(inventorySystem.rentVehicle(type, color));
                    break;
                case 3:
                    System.out.print("Enter vehicle type: ");
                    type = scanner.nextLine();
                    System.out.print("Enter vehicle color: ");
                    color = scanner.nextLine();
                    System.out.println(inventorySystem.returnVehicle(type, color));
                    break;
                case 4:
                    System.out.println("Exiting...");
                    break;
                default:
                    System.out.println("Invalid choice, please try again.");
            }
        } while (choice != 4);
    }
}
